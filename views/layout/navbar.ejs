<!-- Navbar -->
<nav class="bg-green-600 text-white px-6 flex justify-between items-center">
  <!-- Logo -->
  <div class="font-bold text-lg">CampusExchange</div>

  <!-- Search bar -->
  <form action="/search" method="GET" class="flex-grow mx-6">
    <input type="text" name="q" placeholder="Cari produk..."
      class="w-full px-4 py-2 rounded border border-gray-300 text-black focus:outline-none focus:ring-2 focus:ring-green-500" />
  </form>

  <!-- Menu dan Profil -->
  <div class="flex items-center space-x-4">
    <!-- Menu -->
    <a href="/" class="px-4 py-2 rounded hover:bg-green-800 bg-white text-green-600 hover:text-white font-semibold transition">Home</a>
    <a href="/product" class="px-4 py-2 rounded hover:bg-green-800 bg-white text-green-600 hover:text-white font-semibold transition">Produk</a>
    <a href="/keranjang" class="px-4 py-2 rounded hover:bg-green-800 bg-white text-green-600 hover:text-white font-semibold transition">Keranjang</a>

    <!-- Foto Profil & Dropdown -->
    <div class="relative top-3">
      <button id="profileBtn" class="focus:outline-none">
        <img src="/images/profil.jpg" alt="Foto Profil"
          class="w-9 h-9 rounded-full border-2 border-white shadow-md hover:scale-110 transition" />
      </button>

      <!-- Dropdown Menu -->
      <div id="dropdownMenu"
        class="hidden absolute right-0 mt-2 w-56 bg-white text-gray-800 rounded-xl shadow-xl z-50 overflow-hidden">
        
        <!-- Arrow -->
        <div class="absolute -top-2 right-4 w-4 h-4 bg-white rotate-45 shadow-md z-0"></div>

        <!-- Header -->
        <div class="flex items-center gap-3 px-4 py-3 border-b border-gray-200 bg-gray-50">
          <div class="w-9 h-9 bg-green-600 text-white rounded-full flex items-center justify-center font-bold">
            <%= user?.fullName?.charAt(0) || 'A' %>
          </div>
          <div class="text-sm">
            <p class="font-semibold leading-tight"><%= user?.fullName || 'Pengguna' %></p>
            <p class="text-xs text-gray-500">Profil</p>
          </div>
        </div>

        <!-- Menu Items -->
        <a href="/profile/main-profile"
          class="flex items-center gap-2 px-5 py-3 text-sm font-medium hover:bg-gray-100
          <%= currentUrl === '/profile/main-profile' ? 'bg-gray-100 text-green-600' : 'text-gray-700' %>">
          <span>ðŸ‘¤</span><span>Profil Saya</span>
        </a>

        <a href="/profile/product"
          class="flex items-center gap-2 px-5 py-3 text-sm font-medium hover:bg-gray-100
          <%= currentUrl === '/profile/product' ? 'bg-gray-100 text-green-600' : 'text-gray-700' %>">
          <span>ðŸ“¦</span><span>Produk Saya</span>
        </a>

        <a href="/riwayat"
          class="flex items-center gap-2 px-5 py-3 text-sm font-medium hover:bg-gray-100
          <%= currentUrl?.startsWith('/riwayat') ? 'bg-gray-100 text-green-600' : 'text-gray-700' %>">
          <span>ðŸ•“</span><span>Riwayat</span>
        </a>

        <hr class="my-1 border-gray-200">

        <a href="/logout"
          class="flex items-center gap-2 px-5 py-3 text-sm font-medium text-red-600 hover:bg-red-50">
          <span>ðŸšª</span><span>Keluar</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Toggle dropdown menu
  document.addEventListener('DOMContentLoaded', function () {
    const profileBtn = document.getElementById('profileBtn');
    const dropdownMenu = document.getElementById('dropdownMenu');

    profileBtn.addEventListener('click', function (e) {
      e.preventDefault();
      dropdownMenu.classList.toggle('hidden');
    });

    // Close dropdown if click outside
    window.addEventListener('click', function (e) {
      if (!profileBtn.contains(e.target) && !dropdownMenu.contains(e.target)) {
        dropdownMenu.classList.add('hidden');
      }
    });
  });
</script>
