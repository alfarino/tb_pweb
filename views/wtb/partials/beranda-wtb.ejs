<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Beranda WTB</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
  </head>

  <body class="bg-gray-100 min-h-screen">
    <div class="flex flex-1">
      <!-- Sidebar -->
      <aside class="fixed top-0 left-0 h-screen w-64 bg-white shadow-lg border-r border-gray-200 z-50 flex flex-col">
        <!-- Header Sidebar -->
        <div class="p-6 border-b border-gray-200">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-purple-500 rounded-full flex items-center justify-center text-white font-bold">
              <%= user?.fullName ? user.fullName[0].toUpperCase() : '?' %>
            </div>
            <span class="text-gray-700 font-semibold truncate">
              <%= user?.fullName || '(Nama Akun)' %>
            </span>
          </div>
        </div>

        <!-- Navigasi -->
        <nav class="mt-4 flex-1 space-y-1">
          <a href="/wtb/beranda" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium text-gray-700">
            <span>🏠</span>
            <span>Beranda</span>
          </a>

          <a href="/wtb/post-saya" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium text-gray-700">
            <span>📝</span>
            <span>Post Saya</span>
          </a>

          <a href="/wtb" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium text-gray-700">
            <span>🛒</span>
            <span>Request</span>
          </a>

          <a href="/wtb/komentar-saya" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium text-gray-700">
            <span>💬</span>
            <span>Komentar Saya</span>
          </a>
        </nav>
      </aside>

      <!-- Konten -->
      <main class="ml-64 p-8 space-y-4 w-full">
        <% wtbRequests.forEach(request => { %>
          <div class="bg-white border-2 border-gray-300 rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-200">
            <div class="flex flex-col md:flex-row justify-between md:items-start space-y-4 md:space-y-0 md:space-x-6">
              <!-- Avatar -->
              <div class="flex-shrink-0">
                <div class="w-14 h-14 rounded-full bg-purple-300"></div>
              </div>

              <!-- Deskripsi -->
              <div class="flex-1">
                <h2 class="text-xl font-bold text-gray-800 mb-2"><%= request.title %></h2>
                <p class="text-sm font-semibold text-gray-700 whitespace-pre-line leading-relaxed">
                  <%= request.description %>
                </p>
                <p class="text-sm text-purple-700 font-semibold mt-4">
                  Max. Harga: Rp <%= request.maxPrice?.toLocaleString("id-ID") %>
                </p>
              </div>

              <!-- Aksi -->
              <div class="flex items-start space-x-3">
                <button class="text-white bg-purple-600 hover:bg-purple-700 px-4 py-2 rounded text-sm font-medium">
                  Tanggapi
                </button>
                <button title="Suka">
                  <i class="fa fa-heart text-gray-400 hover:text-red-500 text-lg transition"></i>
                </button>
                <button title="Lainnya">
                  <i class="fa fa-ellipsis-v text-gray-400 hover:text-black text-lg transition"></i>
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      </main>
    </div>
  </body>
</html>
