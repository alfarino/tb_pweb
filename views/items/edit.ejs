<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Produk - CampusExchange</title>
  <script src="https://cdn.tailwindcss.com"></script>
    <script>
    function toggleRiwayat() {
      const submenu = document.getElementById("riwayatSubmenu");
      const arrow = document.getElementById("arrow-icon");
      submenu.classList.toggle("hidden");
      arrow.innerHTML = submenu.classList.contains("hidden") ? "&#9660;" : "&#9650;";
    }

    function removeOldImage(index, imageId) {
      const container = document.getElementById(`old-image-container-${index}`);
      if (container) container.classList.add('hidden');

      if (!document.querySelector(`input[type="hidden"][name="removedImageIds"][value="${imageId}"]`)) {
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'removedImageIds';
        hiddenInput.value = imageId;
        document.getElementById('editForm').appendChild(hiddenInput);
      }
    }
  </script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Header -->
  <%- include('../layout/navbar') %>

  <div class="flex flex-1">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-black rounded-full"></div>
          <span class="text-gray-700 font-semibold"><%= user?.fullName || '(Nama Akun)' %></span>
        </div>
      </div>
      <nav class="mt-4 space-y-1">
        <a href="/profile/main-profile" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium">
          <span>ðŸ‘¤</span>
          <span>Akun Saya</span>
        </a>
        <a href="/profile/product" class="flex items-center space-x-3 px-6 py-3 bg-gray-100 font-medium text-blue-600">
          <span>ðŸ‘œ</span>
          <span>Produk Saya</span>
        </a>
        <div>
          <button onclick="toggleRiwayat()" class="w-full px-6 py-3 flex items-center justify-between hover:bg-gray-100 font-medium text-blue-600 focus:outline-none">
            <div class="flex items-center space-x-3">
              <span>ðŸ“Š</span>
              <span class="text-gray-700">Riwayat</span>
            </div>
            <span id="arrow-icon" class="text-gray-500 text-sm">&#9660;</span>
          </button>
          <div id="riwayatSubmenu" class="hidden ml-14 mt-1 space-y-1">
            <a href="/profile/history-buy" class="block text-gray-600 font-medium hover:text-blue-600 pt-4">Pembelian</a>
            <a href="/riwayat/penjualan" class="block text-gray-600 font-medium hover:text-blue-600 pt-4">Penjualan</a>
          </div>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-10 overflow-y-auto">
      <div class="bg-white rounded-xl shadow-md p-8 max-w-3xl mx-auto">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-3xl font-bold text-gray-800">Edit Produk</h1>
        </div>

        <form id="editForm" action="/items/edit/<%= item.id %>" method="POST" enctype="multipart/form-data" class="space-y-6">

          <!-- Nama Produk -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Nama Produk</label>
            <input name="title" value="<%= item.title %>" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
          </div>

          <!-- Deskripsi -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Deskripsi</label>
            <textarea name="description" rows="4" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500"><%= item.description %></textarea>
          </div>

          <!-- Harga -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Harga (Rp)</label>
            <input name="price" type="number" value="<%= item.price %>" min="0" step="0.01" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
          </div>

          <!-- Kategori -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Kategori</label>
            <input name="category" value="<%= item.category %>" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
          </div>

          <!-- Kondisi -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Kondisi</label>
            <select name="condition" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500">
              <option value="NEW" <%= item.condition === 'NEW' ? 'selected' : '' %>>Baru</option>
              <option value="USED" <%= item.condition === 'USED' ? 'selected' : '' %>>Bekas</option>
            </select>
          </div>

          <!-- Detail Kondisi -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Detail Kondisi</label>
            <input name="conditionDetail" value="<%= item.conditionDetail %>" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
          </div>

          <!-- Lokasi -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Lokasi</label>
            <input name="location" value="<%= item.location %>" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
          </div>

          <!-- Gambar Lama -->
          <div>
            <label class="block text-gray-700 font-medium mb-2">Gambar Saat Ini</label>
            <div class="grid grid-cols-3 gap-4">
              <% item.itemImages.forEach((img, index) => { %>
                <div id="old-image-container-<%= index %>" class="relative w-full aspect-square border rounded overflow-hidden bg-gray-100">
                  <img id="old-preview-<%= index %>" src="<%= img.imageUrl %>" class="absolute w-full h-full object-cover" />
                  <span class="absolute bottom-1 left-1 text-xs bg-white rounded px-1 z-20"><%= img.isPrimary ? 'Utama' : 'Tambahan' %></span>
                  <button type="button" onclick="removeOldImage('<%= index %>', '<%= img.id %>')" class="absolute top-1 right-1 bg-white text-red-600 rounded-full text-xs px-2 py-0.5 z-20">x</button>
                </div>
              <% }) %>
            </div>
          </div>

          <!-- Upload Gambar Baru -->
          <div>
            <label class="block text-gray-700 font-medium mb-2 mt-6">Tambah Gambar Baru</label>
            <div class="space-y-4">
              <input type="file" name="primaryImage" accept="image/*" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
              <input type="file" name="additionalImages" accept="image/*" multiple class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
            </div>
          </div>

          <!-- Tombol Aksi -->
          <div class="flex justify-between items-center mt-4">
            <a href="/profile/product" class="bg-gray-500 text-white px-6 py-2 rounded hover:bg-gray-600 transition">Batal</a>
            <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 transition">Simpan Perubahan</button>
          </div>

        </form>
      </div>
    </main>
  </div>

  <%- include('../layout/footer') %>

</body>
</html>
