<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profil Saya - CampusExchange</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

    <%- include('adminnavbar') %>
    
  <!-- Header -->
  

  <div class="flex flex-1">
    <!-- Sidebar -->
    <%- include('adminsidebar') %>

    <!-- Main Content -->
    <main class="flex-1 p-10 overflow-y-auto">
      <div class="bg-white rounded-xl shadow-md p-10">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Profil Saya</h1>

        <div class="flex flex-col md:flex-row md:space-x-10 items-start">
          <!-- Foto Profil -->
          <div class="flex flex-col items-center space-y-4 mb-6 md:mb-0">
            <div class="w-32 h-32 bg-black rounded-full"></div>
            <p class="text-gray-700 text-lg font-semibold"><%= user.username %></p>
          </div>

          <!-- Detail Profil -->
          <div class="flex-1 space-y-4">
            <div>
              <p class="text-gray-600 text-sm">Nama Lengkap</p>
              <p class="text-gray-900 font-medium text-lg"><%= user?.fullName || '(Nama Akun)' %></p>
            </div>
            <div>
              <p class="text-gray-600 text-sm">Email</p>
              <p class="text-gray-900 font-medium text-lg"><%= user.email %></p>
            </div>
            <div>
              <p class="text-gray-600 text-sm">Nomor Telepon</p>
              <p class="text-gray-900 font-medium text-lg"><%= user.phoneNumber %></p>
            </div>
            <div>
              <p class="text-gray-600 text-sm">Program Studi</p>
              <p class="text-gray-900 font-medium text-lg capitalize"><%= user.major %></p>
            </div>

            <!-- Tombol Edit -->
            <div class="pt-6">
              <a href="/admin/adminedit-profile" class="inline-block bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition">
                Edit Profil
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Toggle Script -->
  <script>
    function toggleRiwayat() {
      const submenu = document.getElementById("riwayatSubmenu");
      const arrow = document.getElementById("arrow-icon");
      submenu.classList.toggle("hidden");
      arrow.innerHTML = submenu.classList.contains("hidden") ? "&#9660;" : "&#9650;";
    }
  </script>

    <%- include('../layout/footer') %>
</body>
</html>
