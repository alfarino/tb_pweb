<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Profil - CampusExchange</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen flex flex-col">

  <%- include('../layout/navbar') %>
  
  <!-- Header -->
  <div class="bg-green-600 h-6 w-full"></div>

  <div class="flex flex-1">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-black rounded-full"></div>
          <span class="text-gray-700 font-semibold">(Nama Pemilik Akun)</span>
        </div>
      </div>
      <nav class="mt-4 space-y-1">
        <!-- Akun Saya -->
        <a href="/profile/main-profile" class="flex items-center space-x-3 px-6 py-3 bg-gray-100 font-medium text-blue-600">
          <span>ðŸ‘¤</span>
          <span>Akun Saya</span>
        </a>

        <!-- Produk Saya -->
        <a href="/profile/product" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium text-blue-600">
          <span>ðŸ‘œ</span>
          <span class="text-gray-700">Produk Saya</span>
        </a>

        <!-- Riwayat dengan Toggle -->
        <div>
          <button onclick="toggleRiwayat()" class="w-full px-6 py-3 flex items-center justify-between hover:bg-gray-100 font-medium text-blue-600 focus:outline-none">
            <div class="flex items-center space-x-3">
              <span>ðŸ“Š</span>
              <span class="text-gray-700">Riwayat</span>
            </div>
            <span id="arrow-icon" class="text-gray-500 text-sm">&#9660;</span>
          </button>

          <!-- Submenu Riwayat -->
          <div id="riwayatSubmenu" class="hidden ml-14 mt-1 space-y-1">
            <a href="/profile/history-buy" class="block text-gray-600 font-medium text-blue-600 hover:text-blue-600 pt-4">Pembelian</a>
            <a href="/riwayat/penjualan" class="block text-gray-600 font-medium text-blue-600 hover:text-blue-600 pt-4">Penjualan</a>
          </div>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-10 overflow-y-auto">
      <div class="bg-white rounded-xl shadow-md p-10 max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Edit Profil</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
          <!-- Form -->
          <form class="space-y-6 md:col-span-2">
            <div>
              <label class="block text-gray-700 font-medium mb-2">Username</label>
              <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" />
            </div>
            <div>
              <label class="block text-gray-700 font-medium mb-2">Nama</label>
              <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" />
            </div>
            <div>
              <label class="block text-gray-700 font-medium mb-2">Email</label>
              <input type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" />
            </div>
            <div>
              <label class="block text-gray-700 font-medium mb-2">Nomor Telepon</label>
              <input type="tel" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" />
            </div>
            <div>
              <label class="block text-gray-700 font-medium mb-2">Jenis Kelamin</label>
              <div class="flex space-x-6">
                <label class="flex items-center">
                  <input type="radio" name="gender" value="laki-laki" class="text-blue-600 focus:ring-blue-500" />
                  <span class="ml-2 text-gray-700">Laki-laki</span>
                </label>
                <label class="flex items-center">
                  <input type="radio" name="gender" value="perempuan" class="text-blue-600 focus:ring-blue-500" />
                  <span class="ml-2 text-gray-700">Perempuan</span>
                </label>
              </div>
            </div>
            <div class="pt-4">
              <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
                Simpan Perubahan
              </button>
            </div>
          </form>

          <!-- Gambar Profil -->
          <div class="flex flex-col items-center space-y-4">
            <div class="w-32 h-32 bg-black rounded-full"></div>
            <button class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition">
              Pilih Gambar
            </button>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Toggle Script -->
  <script>
    function toggleRiwayat() {
      const submenu = document.getElementById("riwayatSubmenu");
      const arrow = document.getElementById("arrow-icon");
      submenu.classList.toggle("hidden");
      arrow.innerHTML = submenu.classList.contains("hidden") ? "&#9660;" : "&#9650;";
    }
  </script>

  <%- include('../layout/footer') %>
</body>
</html>
