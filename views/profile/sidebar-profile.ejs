<!-- Sidebar -->
<aside class="w-64 bg-white shadow-lg">
  <div class="p-6 border-b border-gray-200">
    <div class="flex items-center space-x-3">
      <div class="w-10 h-10 bg-black rounded-full"></div>
      <span class="text-gray-700 font-semibold"><%= user?.fullName || '(Nama Akun)' %></span>
    </div>
  </div>

  <nav class="mt-4 space-y-1">
    <a href="/profile/main-profile" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium">
      <span>ðŸ‘¤</span>
      <span>Akun Saya</span>
    </a>

    <a href="/profile/product" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium">
      <span>ðŸ‘œ</span>
      <span class="text-gray-700">Produk Saya</span>
    </a>

    <!-- Riwayat Toggle -->
    <div>
      <button onclick="toggleRiwayat()" class="w-full px-6 py-3 flex items-center justify-between hover:bg-gray-100 font-medium focus:outline-none">
        <div class="flex items-center space-x-3">
          <span>ðŸ“Š</span>
          <span class="text-gray-700">Riwayat</span>
        </div>
        <span id="arrow-icon" class="text-gray-500 text-sm">&#9660;</span>
      </button>
      <div id="riwayatSubmenu" class="hidden ml-14 mt-1 space-y-1">
        <a href="/profile/history-buy" class="block text-gray-600 font-medium hover:text-blue-600 pt-4">Pembelian</a>
        <a href="/riwayat/penjualan" class="block text-gray-600 font-medium hover:text-blue-600 pt-4">Penjualan</a>
      </div>
    </div>

    <% if (user && user.isAdmin) { %>
      <!-- Admin Section -->
      <div class="border-t border-gray-300 mt-4 pt-4">
        <p class="px-6 text-gray-600 font-semibold mb-2">Admin Panel</p>
        <a href="/admin/dashboard" class="block px-6 py-2 hover:bg-gray-100 text-red-600">Dashboard Admin</a>
        <a href="/admin/item-approval" class="block px-6 py-2 hover:bg-gray-100 text-red-600">Approval Produk</a>
        <a href="/admin/user-approval" class="block px-6 py-2 hover:bg-gray-100 text-red-600">Approval Akun</a>
      </div>
    <% } %>
  </nav>
</aside>

<script>
  function toggleRiwayat() {
    const submenu = document.getElementById("riwayatSubmenu");
    const arrow = document.getElementById("arrow-icon");
    submenu.classList.toggle("hidden");
    arrow.innerHTML = submenu.classList.contains("hidden") ? "&#9660;" : "&#9650;";
  }
</script>
