 <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Produk Saya - CampusExchange</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col">
    <!-- Header -->
    <%- include('../layout/navbar') %>
    
    <!-- Main Container -->
    <div class="flex flex-col md:flex-row flex-1">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-black rounded-full"></div>
          <span class="text-gray-700 font-semibold">(Nama Pemilik Akun)</span>
        </div>
      </div>
      <nav class="mt-4 space-y-1">
        <!-- Akun Saya -->
        <a href="/profile/main-profile" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium">
          <span>ðŸ‘¤</span>
          <span>Akun Saya</span>
        </a>

        <!-- Produk Saya -->
       <a href="/profile/product" class="flex items-center space-x-3 px-6 py-3 bg-gray-100 font-medium text-blue-600">
          <span>ðŸ‘œ</span>
          <span class="text-blue-700">Produk Saya</span>
        </a>

        <!-- Riwayat dengan Toggle -->
        <div>
          <button onclick="toggleRiwayat()" class="w-full px-6 py-3 flex items-center justify-between hover:bg-gray-100 font-medium text-blue-600 focus:outline-none">
            <div class="flex items-center space-x-3">
              <span>ðŸ“Š</span>
              <span class="text-gray-700">Riwayat</span>
            </div>
            <span id="arrow-icon" class="text-gray-500 text-sm">&#9660;</span>
          </button>

          <!-- Submenu Riwayat -->
          <div id="riwayatSubmenu" class="hidden ml-14 mt-1 space-y-1">
            <a href="/profile/history-buy" class="block text-gray-600 font-medium text-blue-600 hover:text-blue-600 pt-4">Pembelian</a>
            <a href="/riwayat/penjualan" class="block text-gray-600 font-medium text-blue-600 hover:text-blue-600 pt-4">Penjualan</a>
          </div>
        </div>
      </nav>
    </aside>

      <!-- Main Content -->
      <main class="flex-1 p-10 overflow-y-auto">
        <div class="bg-white rounded-xl shadow-md p-8">
          <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Produk Saya</h1>
            <button onclick="window.location.href='/items/add'" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
            Tambah Produk
            </button>
          </div>

          <!-- Daftar Produk -->
          <% if (produk.length === 0) { %>
            <div class="text-gray-500 text-center py-10">
              Belum ada produk yang ditambahkan.
            </div>
          <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                  <% produk.forEach(item => { %>
                  <div class="border border-gray-200 rounded-lg p-4 bg-white shadow-sm hover:shadow-md transition">
                  <img src="<%= item.imageUrl %>" class="w-full h-40 object-cover rounded mb-4" alt="Gambar Produk" />
                  <h2 class="text-lg font-semibold text-gray-800"><%= item.title %></h2>
                  <p class="text-gray-600">Harga: Rp<%= Number(item.price).toLocaleString('id-ID') %></p> 
                  <p class="text-sm text-gray-500 mt-1">Status: <%= item.status %></p>
                  <div class="mt-4 flex justify-between text-sm text-blue-600">
                  <a href="/produk/edit/<%= item.id %>" class="hover:underline">Edit</a>
                  <a href="/produk/hapus/<%= item.id %>" class="hover:underline text-red-500">Hapus</a>
                  </div>
                  </div>  
                  <% }) %>

            </div>
          <% } %>
        </div>
      </main>
    </div>

    <!-- Footer -->
    <%- include('../layout/footer') %>

    <!-- Toggle Script -->
    <script>
      function toggleRiwayat() {
        const submenu = document.getElementById("riwayatSubmenu");
        const arrow = document.getElementById("arrow-icon");
        submenu.classList.toggle("hidden");
        arrow.innerHTML = submenu.classList.contains("hidden") ? "&#9660;" : "&#9650;";
      }
    </script>
  </body>
  </html>
