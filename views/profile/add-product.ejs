<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Tambah Produk - CampusExchange</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  <!-- Header -->
  <div class="bg-green-600 h-6 w-full"></div>

  <div class="flex flex-1">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-black rounded-full"></div>
          <span class="text-gray-700 font-semibold">(Header)</span>
        </div>
      </div>
      <nav class="mt-4 space-y-1">
        <a href="/profile" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100">
          <span>ðŸ‘¤</span>
          <span class="text-gray-700">Akun Saya</span>
        </a>

        <a href="/produk" class="flex items-center space-x-3 px-6 py-3 font-medium text-blue-600 bg-gray-100">
          <span>ðŸ‘œ</span>
          <span>Produk Saya</span>
        </a>

        <!-- Riwayat Toggle -->
        <div>
          <button onclick="toggleRiwayat()" class="w-full px-6 py-3 flex items-center justify-between hover:bg-gray-100 focus:outline-none">
            <div class="flex items-center space-x-3">
              <span>ðŸ“Š</span>
              <span class="text-gray-700">Riwayat</span>
            </div>
            <span id="arrow-icon" class="text-gray-500 text-sm">&#9660;</span>
          </button>

          <div id="riwayatSubmenu" class="hidden ml-14 mt-1 space-y-1">
            <a href="/riwayat/pembelian" class="block text-gray-600 hover:text-blue-600">Pembelian</a>
            <a href="/riwayat/penjualan" class="block text-gray-600 hover:text-blue-600">Penjualan</a>
          </div>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-10 overflow-y-auto">
      <div class="bg-white rounded-xl shadow-md p-8 max-w-3xl mx-auto">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Tambah Produk</h1>

        <form action="/produk/tambah" method="POST" enctype="multipart/form-data" class="space-y-6">
          <!-- Nama Produk -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Nama Produk</label>
            <input name="nama" type="text" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
          </div>

          <!-- Deskripsi -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Deskripsi</label>
            <textarea name="deskripsi" rows="4" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500"></textarea>
          </div>

          <!-- Harga -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Harga (Rp)</label>
            <input name="harga" type="number" min="0" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
          </div>

          <!-- Jumlah Produk -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Jumlah</label>
            <input name="jumlah" type="number" min="1" required class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500" />
          </div>

          <!-- Fakultas -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Kategori Fakultas</label>
            <select name="fakultas" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500">
              <option value="">-- Pilih Fakultas --</option>
              <option>Teknik</option>
              <option>Ekonomi</option>
              <option>Kedokteran</option>
              <option>Sastra</option>
            </select>
          </div>

          <!-- Kondisi -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Kondisi</label>
            <select name="kondisi" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500">
              <option value="">-- Pilih Kondisi --</option>
              <option value="baru">Baru</option>
              <option value="bekas">Bekas</option>
            </select>
          </div>

          <!-- Status (radio) -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Status</label>
            <div class="space-y-2">
              <label class="flex items-center space-x-2">
                <input type="radio" name="status" value="dijual" required class="text-green-600 focus:ring-green-500" />
                <span>Dijual</span>
              </label>
              <label class="flex items-center space-x-2">
                <input type="radio" name="status" value="disewa" class="text-green-600 focus:ring-green-500" />
                <span>Disewa</span>
              </label>
              <label class="flex items-center space-x-2">
                <input type="radio" name="status" value="didonasi" class="text-green-600 focus:ring-green-500" />
                <span>Didonasi</span>
              </label>
              <label class="flex items-center space-x-2">
                <input type="radio" name="status" value="preorder" class="text-green-600 focus:ring-green-500" />
                <span>Preorder</span>
              </label>
            </div>
          </div>

          <!-- Upload Gambar -->
          <div>
            <label class="block text-gray-700 font-medium mb-1">Upload Gambar</label>
            <input name="gambar" type="file" accept="image/*" class="block w-full text-gray-700" />
          </div>

          <!-- Submit -->
          <div>
            <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 transition">
              Simpan Produk
            </button>
          </div>
        </form>
      </div>
    </main>
  </div>

  <!-- Footer -->
  <div class="bg-green-600 h-16 w-full"></div>

  <!-- Toggle Riwayat Script -->
  <script>
    function toggleRiwayat() {
      const submenu = document.getElementById("riwayatSubmenu");
      const arrow = document.getElementById("arrow-icon");
      submenu.classList.toggle("hidden");
      arrow.innerHTML = submenu.classList.contains("hidden") ? "&#9660;" : "&#9650;";
    }
  </script>
</body>
</html>
