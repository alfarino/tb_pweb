<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profil Saya - CampusExchange</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

    <%- include('../layout/navbar') %>
    
  <!-- Header -->
  

  <div class="flex flex-1">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center space-x-3">
          <img src="<%= user?.profileImage ? user.profileImage.trim() : '/default-avatar.png' %>"
              class="w-12 h-12 object-cover rounded-full mb-4"
              alt="Foto Profil" />
          <span class="text-gray-700 font-semibold"><%= user?.fullName || '(Nama Akun)' %></span>
        </div>
      </div>
      <nav class="mt-4 space-y-1">
        <!-- Akun Saya -->
        <a href="/profile/main-profile" class="flex items-center space-x-3 px-6 py-3 bg-gray-100 font-medium text-blue-600">
          <span>ðŸ‘¤</span>
          <span>Akun Saya</span>
        </a>

        <!-- Produk Saya -->
       <a href="/profile/product" class="flex items-center space-x-3 px-6 py-3 hover:bg-gray-100 font-medium text-blue-600">
          <span>ðŸ‘œ</span>
          <span class="text-gray-700">Produk Saya</span>
        </a>

        <!-- Riwayat dengan Toggle -->
        <div>
          <button onclick="toggleRiwayat()" class="w-full px-6 py-3 flex items-center justify-between hover:bg-gray-100 font-medium text-blue-600 focus:outline-none">
            <div class="flex items-center space-x-3">
              <span>ðŸ“Š</span>
              <span class="text-gray-700">Riwayat</span>
            </div>
            <span id="arrow-icon" class="text-gray-500 text-sm">&#9660;</span>
          </button>

          <!-- Submenu Riwayat -->
          <div id="riwayatSubmenu" class="hidden ml-14 mt-1 space-y-1">
            <a href="/profile/history-buy" class="block text-gray-600 font-medium text-blue-600 hover:text-blue-600 pt-4">Pembelian</a>
            <a href="/profile/history-buy" class="block text-gray-600 font-medium text-blue-600 hover:text-blue-600 pt-4">Penjualan</a>
          </div>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-10 overflow-y-auto">
      <div class="bg-white rounded-xl shadow-md p-10">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Profil Saya</h1>

        <div class="flex flex-col md:flex-row md:space-x-10 items-start">
          <!-- Foto Profil -->
          <div class="flex flex-col items-center space-y-4 mb-6 md:mb-0">
            <img src="<%= user?.profileImage ? user.profileImage.trim() : '/default-avatar.png' %>"
              class="w-12 h-12 object-cover rounded-full mb-4"
              alt="Foto Profil" />
            <p class="text-gray-700 text-lg font-semibold"><%= user.username %></p>
          </div>


          <!-- Detail Profil -->
          <div class="flex-1 space-y-4">
            <div>
              <p class="text-gray-600 text-sm">Nama Lengkap</p>
              <p class="text-gray-900 font-medium text-lg"><%= user?.fullName || '(Nama Akun)' %></p>
            </div>
            <div>
              <p class="text-gray-600 text-sm">Email</p>
              <p class="text-gray-900 font-medium text-lg"><%= user.email %></p>
            </div>
            <div>
              <p class="text-gray-600 text-sm">Nomor Telepon</p>
              <p class="text-gray-900 font-medium text-lg"><%= user.phoneNumber %></p>
            </div>
            <div>
              <p class="text-gray-600 text-sm">Program Studi</p>
              <p class="text-gray-900 font-medium text-lg capitalize"><%= user.major %></p>
            </div>

            <!-- Tombol Edit -->
            <div class="pt-6">
              <a href="/profile/edit-profile" class="inline-block bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition">
                Edit Profil
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Toggle Script -->
  <script>
    function toggleRiwayat() {
      const submenu = document.getElementById("riwayatSubmenu");
      const arrow = document.getElementById("arrow-icon");
      submenu.classList.toggle("hidden");
      arrow.innerHTML = submenu.classList.contains("hidden") ? "&#9660;" : "&#9650;";
    }
  </script>

    <%- include('../layout/footer') %>
</body>
</html>
